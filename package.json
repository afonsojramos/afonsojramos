{
  "name": "afonsojramos",
  "version": "1.0.4",
  "description": "A personal command-line business card.",
  "keywords": [
    "business",
    "card",
    "npx card",
    "business card"
  ],
  "author": "Afonso Ramos <afonsojorgeramos@gmail.com>",
  "homepage": "https://github.com/afonsojramos/afonsojramos/tree/master/packages/business-card#readme",
  "license": "ISC",
  "main": "src/index.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__",
    "src": "src"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afonsojramos/afonsojramos.git"
  },
  "bugs": {
    "url": "https://github.com/afonsojramos/afonsojramos/issues"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.json",
    "dev": "tsc-watch -p tsconfig.json --onSuccess 'node ./dist/index.js'",
    "lint": "eslint --ext .js,.ts packages/*/src",
    "test": "mocha",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.2"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "__tests__/*.spec.ts",
    "require": "ts-node/register"
  }
}
