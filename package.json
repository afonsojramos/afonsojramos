{
  "name": "afonsojramos",
  "version": "2.1.0",
  "description": "A personal command-line business card with interactive TUI",
  "keywords": [
    "business",
    "business card",
    "card",
    "cli",
    "npx card",
    "terminal",
    "tui"
  ],
  "homepage": "https://afonsojramos.me",
  "bugs": {
    "url": "https://github.com/afonsojramos/afonsojramos/issues"
  },
  "license": "ISC",
  "author": "Afonso Ramos <afonsojorgeramos@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afonsojramos/afonsojramos.git"
  },
  "bin": {
    "afonsojramos": "dist/cli.js"
  },
  "type": "module",
  "main": "dist/cli.js",
  "scripts": {
    "dev": "tsx watch src/cli.tsx",
    "generate:frames": "bun scripts/compress-frames.ts",
    "build": "bun run generate:frames && tsc",
    "build:bun": "bun build src/cli.tsx --compile --outfile bin/afonsojramos",
    "build:bun:macos": "bun build src/cli.tsx --compile --target=bun-darwin-arm64 --outfile bin/afonsojramos-macos",
    "build:bun:linux": "bun build src/cli.tsx --compile --target=bun-linux-x64 --outfile bin/afonsojramos-linux",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt --write .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "ink": "^5.2.0",
    "ink-gradient": "^3.0.0",
    "open": "^10.1.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/react": "^18.3.0",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "react-devtools-core": "^7.0.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
