  "extends": ["airbnb-typescript/base", "plugin:prettier/recommended", "plugin:mocha/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
